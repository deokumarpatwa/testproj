<mvc:View
    controllerName="com.intapptics.mdbulkload.controller.BulkApprover"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Page
        id="page_approver"
        title="{i18n>title}"
    >
        <subHeader>
            <OverflowToolbar id="oft_header">
                <ToolbarSpacer id="tbs_header" />
                <Button
                    id="btn_putback"
                    press="putBackWorkItem"
                    icon="sap-icon://cause"
                    type="Emphasized"
                    tooltip="Putback"
                />
            </OverflowToolbar>
        </subHeader>
        <content>
            <MessageStrip
                id="mst_header"
                type="Information"
                showIcon="true"
                class="sapUiMediumMarginBottom"
            />
            <f:Form
                id="form_bulkappr"
                editable="false"
            >
                <f:layout>
                    <f:ResponsiveGridLayout
                        id="rglayoutid_bulkappr"
                        labelSpanXL="4"
                        labelSpanL="4"
                        labelSpanM="4"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="0"
                        emptySpanL="0"
                        emptySpanM="0"
                        emptySpanS="0"
                        columnsXL="3"
                        columnsL="2"
                        columnsM="2"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer id="top_formcontainer_bulkappr">
                        <f:formElements>
                            <f:FormElement
                                id="fe_category"
                                label="{i18n>lblCategory}"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_category"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="fe_table"
                                label="{i18n>lblTableList}"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_table"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="form_tabledesc"
                                label="{i18n>lblTableDesc}"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_tabledesc"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="form_approver">
                                <f:fields>
                                    <Text
                                        id="txt_approver"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="form_approverremarks">
                                <f:fields>
                                    <Text
                                        id="txt_approverremarks"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement id="form_wfid">
                                <f:fields>
                                    <Text
                                        id="txt_wfid"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer id="req_formcontainer">
                        <f:formElements>
                            <f:FormElement
                                id="fe_reqname"
                                label="Requester Name"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_reqname"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="fe_reqid"
                                label="Requester Id"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_reqid"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="fe_reqemail"
                                label="Requester Email"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_reqemail"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                id="fe_reqremarks"
                                label="Requester Remarks"
                            >
                                <f:fields>
                                    <Text
                                        id="txt_reqremarks"
                                        wrappingType="Hyphenated"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <Label id="taskCompletedMsg" />
        </content>
        <footer>
            <Toolbar id="tb_footerbulkappr">
                <Button
                    id="btn_seechanges"
                    text="See Changes"
                    type="Emphasized"
                    icon="sap-icon://excel-attachment"
                    press="handleDownloadPress"
                    width="13%"
                />
                <ToolbarSpacer id="tbs_footerbulkappr" />
                <Button
                    id="btn_reject"
                    type="Emphasized"
                    icon="sap-icon://decline"
                    app:buttonAction="REJECTED"
                    text="Reject"
                    tooltip="Reject"
                    press="onActionButtonPress"
                    visible="false"
                />
                <Button
                    id="btn_approve"
                    type="Emphasized"
                    icon="sap-icon://accept"
                    app:buttonAction="APPROVED"
                    text="Approve"
                    tooltip="Approve"
                    press="onActionButtonPress"
                    visible="false"
                />
                <Button
                    id="btn_resolve"
                    type="Emphasized"
                    icon="sap-icon://accept"
                    app:buttonAction="Resolve"
                    text="Resolve"
                    tooltip="Resolve"
                    press="onActionButtonPress"
                    visible="false"
                />
                <Button
                    id="btn_abandon"
                    type="Emphasized"
                    icon="sap-icon://decline"
                    app:buttonAction="Abandon"
                    text="Abandon"
                    tooltip="Abandon"
                    press="onActionButtonPress"
                    visible="false"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>